#include <stdio.h>


void bubbleSort(int arr[], int n) {
    int i, j, temp;
    int trocado; 

    for (i = 0; i < n - 1; i++) {
        trocado = 0; // Inicializa como falso para cada iteração externa

        
        for (j = 0; j < n - i - 1; j++) {
            if (arr[j] > arr[j + 1]) {
              
                temp = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
                trocado = 1; // Marca que ocorreu troca
            }
        }

     
        if (!trocado) {
            printf("\nArray ordenado após %d iterações.", i + 1);
            break;
        }
    }
}

int main() {
    int n;


    printf("Digite a quantidade de números: ");
    while (scanf("%d", &n) != 1 || n <= 0) {
        printf("Entrada inválida. Digite um número inteiro positivo: ");
        while (getchar() != '\n'); // Limpa o buffer
    }

    int arr[n]; 

 
    for (int i = 0; i < n; i++) {
        printf("Digite o número %d: ", i + 1);
        while (scanf("%d", &arr[i]) != 1) {
            printf("Entrada inválida. Digite um número inteiro: ");
            while (getchar() != '\n'); // Limpa o buffer
        }
    }

   
    printf("\nArray original: ");
    for (int i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }


    bubbleSort(arr, n);

 
    printf("\nArray ordenado: ");
    for (int i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }

    printf("\n");
    return 0;
}
